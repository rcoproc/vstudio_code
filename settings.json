{
    // "files.autoSave": "onFocusChange",
    "window.zoomLevel": 0,
    "editor.fontSize": 14,
    "editor.lineNumbers": "on",
    "workbench.sideBar.location": "right",
    // Controls if the minimap is shown
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    // What key should <leader> map to in remappings?
    "vim.leader": "\\",
    // Enable the EasyMotion plugin for Vim.
    "vim.easymotion": true,
    "typescript.check.tscVersion": false,
    "vim.disableAnnoyingNeovimMessage": true,
    "editor.renderIndentGuides": false,
    "editor.tabSize": 2,
    "window.title": "${activeEditorShort}${separator}${rootName}, (${activeEditorLong})",
    "workbench.panel.location": "bottom",
    "gitlens.advanced.messages": {
        "suppressFileNotUnderSourceControlWarning": true,
        "suppressResultsExplorerNotice": true,
        "suppressShowKeyBindingsNotice": true
    },
    "zenMode.centerLayout": false,
    "vim.easymotion": true,
     // Controls whether the editor should render indent guides
    "editor.renderIndentGuides": false,
    "ruby.intellisense": "rubyLocate",
    "ruby.codeCompletion": "rcodetools",
    "workbench.iconTheme": "vscode-icons",
    "gitlens.historyExplorer.enabled": true,
    // Allow VSCodeVim to change status bar color based on mode
    "vim.statusBarColorControl": true,
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.blame.highlight.enabled": false,
    // "gitlens.codeLens.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.hovers.enabled": false,
    "gitlens.blame.heatmap.enabled": false,
    "explorer.confirmDelete": true,
    // Controls the font size in pixels of the terminal.
    "terminal.integrated.fontSize": 14,
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f"
    },
    "breadcrumbs.enabled": true,
    "editor.multiCursorModifier": "alt",
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "none",
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,
    "search.actionsPosition": "right",
    "search.showLineNumbers": true,
    "files.useExperimentalFileWatcher": true,
    "auto-close-tag.activationOnLanguage": [
        "html",
        "xml",
        "erb",
        "html.erb",
        "ejs",
        "jinja",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "plaintext",
        "markdown",
        "vue",
        "liquid",
        "twig"
    ],
    "auto-rename-tag.activationOnLanguage": [
        "html",
        "xml",
        "erb",
        "html.erb",
        "ejs",
        "jinja",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "plaintext",
        "markdown",
        "vue",
        "liquid",
        "twig"
    ]
}
